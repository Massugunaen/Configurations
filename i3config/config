bindsym --release $mod+Shift+Mod1+j move container to output down
bindsym --release $mod+Shift+Mod1+k move container to output up
bindsym --release $mod+Shift+Mod1+l move container to output right

# focus the parent container
bindsym --release $mod+Ctrl+p focus parent
bindsym --release $mod+Ctrl+c focus child

# move workspaces to different screens
bindsym --release $mod+Ctrl+l move workspace to output left
bindsym --release $mod+Ctrl+r move workspace to output right

# split in horizontal orientation
bindsym --release $mod+Ctrl+h split v

# split in vertical orientation
bindsym --release $mod+Ctrl+v split h

# fullscreen mode of the focused window
bindsym --release $mod+f fullscreen toggle

# toggle tiling / floating
bindsym --release $mod+Shift+Mod1+space floating toggle

# change focus between tiling / floating windows
bindsym --release $mod+Mod1+space focus mode_toggle
# move to last focused workspace
bindsym --release $mod+Mod1+s sticky toggle

# rename workspaces
bindsym --release $mod+Mod1+r exec i3-input -F 'rename workspace to "%s"' -P 'New name: '


bar {
    output primary
    status_command i3status --config $HOME/.config/i3/i3status.conf | _get_current_track | i3-keyboard-layout i3status
    position top
    
    colors	{
        background #000000
        statusline #ffffff
        separator #ffffff
        #                  border  backgr. text
        focused_workspace  #ffffff #ffffff #000000
        active_workspace   #222222 #222222 #ffffff
        inactive_workspace #111111 #111111 #ffffff
        urgent_workspace   #900000 #900000 #ffffff
    }
}

bar {
    output nonprimary
    status_command i3status --config $HOME/.config/i3/i3nonprimary_status.conf | _get_current_track | i3-keyboard-layout i3status
    tray_output none
